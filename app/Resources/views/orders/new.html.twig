{% extends "base.html.twig" %}

{% set title = "Новый заказ" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ title }}</h1>

        {{ form_start(form) }}
        {{ form_row(form.client, {label: 'Клиент'}) }}
        {{ form_row(form.car, {label: 'Авто'}) }}
        {{ form_row(form.office, {label: 'Точка проката'}) }}
        {{ form_row(form.startAt, {label: 'Дата взятия в прокат'}) }}
        {{ form_row(form.endAt, {label: 'Дата возврата'}) }}
        {{ form_row(form.returnOffice, {label: 'Точка возврата'}) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">Сохранить</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
